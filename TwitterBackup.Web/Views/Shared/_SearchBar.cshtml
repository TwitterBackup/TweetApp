@using TwitterBackup.Models
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<link rel="stylesheet" href="~/css/tweeter.css" />


@if (SignInManager.IsSignedIn(User))
{
    <div class="col-sm-3 col-md-3">
        <form class="navbar-form" asp-controller="FavouriteTweeters" asp-action="SearchResults" method="post" role="search">
            <div class="input-group">
                <input name="searchString" type="text" class="form-control" placeholder="Search tweeter">
                <div class="input-group-btn">
                    <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                </div>
            </div>
        </form>
    </div>
}

