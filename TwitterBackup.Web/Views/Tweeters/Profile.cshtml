@using TwitterBackup.Models
@model TwitterBackup.Web.Models.TweeterViewModels.TweeterProfileViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<div class="container">
    <div class="row">
        <div class="col-md-12 text-center ">
            <div class="panel panel-default">
                <div class="userprofile social" style="background: url(@Model.Tweeter.ProfileBannerUrl); height: 300px;">
                    <div class="userpic">
                        <img src="@Model.Tweeter.ProfileImageUrl" alt="" class="userpicimg">
                    </div>
                </div>
                <div class="col-md-12 border-top border-bottom">
                    <ul class="nav nav-pills pull-left countlist" role="tablist">
                        <li role="presentation">
                            <p class="username">
                                <span style="font-size: 18px;">@Model.Tweeter.Name</span><br>
                                <span style="font-size: 12px;">@Model.Tweeter.ScreenName</span>
                            </p>
                        </li>
                        <li role="presentation">
                            <p>
                                TWEETS<br>
                                <span>@Model.Tweeter.TweetsCount</span>
                            </p>
                        </li>
                        <li role="presentation">
                            <p>
                                FOLLOWERS<br>
                                <span>@Model.Tweeter.FollowersCount</span>
                            </p>
                        </li>
                        <li role="presentation">
                            <p>
                                FRIENDS<br>
                                <span>@Model.Tweeter.FriendsCount</span>
                            </p>
                        </li>
                    </ul>
                    <div class="pull-right" style="margin: 30px">
                        @{
                            var action = Model.Tweeter.IsLikedFromUser ? "RemoveTweeterFromFavourite" : "AddTweeterToFavourite";
                            var btnClass = Model.Tweeter.IsLikedFromUser ? "btn-following" : "btn-follow";
                            var btnText = Model.Tweeter.IsLikedFromUser ? "Following" : "Follow";

                            <form class="tweeter-form" asp-controller="Tweeters" asp-action=RemoveTweeterFromFavourite method="post" tweeter-id="123">

                                <div class="tweeter-model-hiden-input" style="display: none;">
                                    <input asp-for="Tweeter.TweeterId" class="form-control" />
                                    <input asp-for="Tweeter.ScreenName" class="form-control" />
                                </div>

                                <div class="follow-div">
                                    <button type="submit" class="@btnClass btn-tweeter btn-follow-pic" id="@Model.Tweeter.TweeterId">
                                        <i class="fa fa-twitter"></i>
                                        @btnText
                                    </button>
                                </div>
                            </form>
                        }
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
        <!-- /.col-md-12 -->
        <div class="col-md-4 col-sm-12 pull-left">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <p class="page-subtitle small">@Model.Tweeter.Description</p>
                </div>
                <div class="col-md-12">
                    <ul class="list-group">
                        @{
                            if (Model.Tweeter.Verified)
                            {
                                <li class="list-group-item"><span class="fa fa-check-circle-o"></span> Verified</li>
                            }
                        }
                        <li class="list-group-item"><span class="fa fa-map-marker"></span> @Model.Tweeter.Location</li>
                        <li class="list-group-item"><span class="fa fa-calendar"></span> @Model.Tweeter.CreatedAt</li>
                    </ul>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
        <div class="col-md-8 col-sm-12 pull-right posttimeline">
            @{
                foreach (var tweetViewModel in Model.Tweets)
                {
                    tweetViewModel.Tweeter = new Tweeter();
                    tweetViewModel.Tweeter.Name = Model.Tweeter.Name;
                    await Html.RenderPartialAsync("~/Views/Tweets/_Tweet.cshtml", tweetViewModel);
                }
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).on('submit', '.tweet', function (event) {

            event.preventDefault();

            var textArea = $(this.getElementsByClassName('comment-field'));

            if (!textArea.hasClass('hidden')) {
                var comment = $('.comment-box').val();

                console.log(comment);
            }

            $(textArea).toggleClass('hidden');
        })
    </script>
}
