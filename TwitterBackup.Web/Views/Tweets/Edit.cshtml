@model TwitterBackup.Web.Models.TweetViewModels.EditTweetViewModel


@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Tweet</h4>
<hr />
<div class="row">
    <div>
        <form asp-action="Edit" id="edit-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="TweetId" />
            <input type="hidden" asp-for="UserName">
            <input type="hidden" asp-for="Text">

            <label asp-for="Text" class="control-label"></label>
            <p>@Html.DisplayFor(model => model.Text)</p>

            <div class="form-group">
                <label asp-for="TweetComments" class="control-label"></label>
                <input asp-for="TweetComments" class="form-control col-md-5" @*onkeypress="this.style.width = ((this.value.length + 1) * 8) + 'px';" *@ />
                <span asp-validation-for="TweetComments" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
}